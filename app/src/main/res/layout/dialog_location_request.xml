<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/middle_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_location_title"
        android:layout_margin="10dp"
        android:minHeight="256dp"
        android:scaleType="fitXY"
        android:src="@drawable/drupp_location" />

    <TextView
        android:id="@+id/tv_location_title"
        style="@style/TextView.Black.Mega.Bold"
        android:layout_below="@id/tv_location_title"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/location_phone_permission" />

    <TextView
        style="@style/TextView.Black.Small"
        android:layout_below="@id/tv_location_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/turn_on_location_to_quickly" />

    <Button
        android:id="@+id/btn_allow"
        style="@style/PaymentButtonBlack"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="@string/allow_location" />

</RelativeLayout>