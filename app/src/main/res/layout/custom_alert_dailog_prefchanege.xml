<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    tools:context=".view.ui.scheduledRides.UserPostedRideSingelView"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_margin="10dp"
        android:text="@string/ride_details_updates"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="@string/source"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/source"
            style="@style/TextView_style_d"
            android:textColor="@color/grey"
            android:layout_marginLeft="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tvDestination"
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:textColor="@color/colorBlack"
            android:text="@string/destination"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destination"
            android:textColor="@color/grey"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp" />
    </LinearLayout>
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="@string/coriders"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/coriders"
            style="@style/TextView_style_d"
            android:text="@string/indore"
            android:textColor="@color/grey"/>
    </LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="@string/coriders"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:id="@+id/coriders"
            android:layout_width="wrap_content"
            style="@style/TextView_style_d"
            android:textColor="@color/grey"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="@string/fare"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fare"
            style="@style/TextView_style_d"
            android:textColor="@color/grey"
            android:layout_marginLeft="15dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="@string/ride_date"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/date"
            style="@style/TextView_style_d"
            android:textColor="@color/grey"
            android:layout_marginLeft="15dp" />

    </LinearLayout>
    <Button
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="@string/view"
        android:id="@+id/btView"
        android:background="@drawable/round_corner_button_black"
        android:textColor="@color/pure_white"/>
</LinearLayout>