<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".view.ui.scheduledRides.UserPostedRidesEdit">

    <include layout="@layout/app_toolbar_edit_ride_details" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/departure"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_source"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:focusableInTouchMode="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_circle_green" />

            <Space
                style="@style/SpaceMiniTrim"
                android:layout_width="10dp" />

            <EditText
                android:id="@+id/etDeparture"
                style="@style/TextView.Black.Medium.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_clear_black_24dp"
                android:focusableInTouchMode="true"
                android:hint="@string/from"
                android:singleLine="true" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/to"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_destination"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="-12dp"
        android:focusableInTouchMode="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_circle_red" />

            <Space
                style="@style/SpaceMiniTrim"
                android:layout_width="10dp" />

            <EditText
                android:id="@+id/etDestination"
                style="@style/TextView.Black.Medium.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_clear_black_24dp"
                android:focusableInTouchMode="true"
                android:hint="@string/to"
                android:singleLine="true" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/ride_time"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/edit_time"
        style="@style/TextView_style_b"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="false"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

    <Button
        android:id="@+id/edit_user_done"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_corner_button_black"
        android:text="@string/done"
        android:textColor="@color/pure_white" />
</LinearLayout>