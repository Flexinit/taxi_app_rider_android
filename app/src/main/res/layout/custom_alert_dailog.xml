<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tvShop1"
            style="@style/TextView.Black.Medium"
            android:layout_marginBottom="20dp"
            android:text="@string/checkout_great_deals_with_drupp"
            android:textAlignment="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvShop1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btYes"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_button_black"
                android:text="@string/shop"
                android:textColor="@color/pure_white" />

            <Space
                style="@style/SpaceMiniTrim"
                android:layout_width="5dp" />

            <Button
                android:id="@+id/btNo"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_button_grey"
                android:text="@string/no_thanks"
                android:textColor="@color/pure_white" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>