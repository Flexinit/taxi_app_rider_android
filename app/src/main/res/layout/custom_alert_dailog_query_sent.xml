<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp">

        <TextView
            android:id="@+id/tvRide_Cancel"
            style="@style/TextView.Black.Medium.Bold"
            android:layout_centerHorizontal="true"
            android:text="@string/thank_you" />

        <TextView
            android:id="@+id/msg"
            style="@style/TextView.Black.Small"
            android:layout_below="@id/tvRide_Cancel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/your_query_has_been_sent" />

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/round_corner_button_black"
            android:minHeight="32dp"
            android:text="@string/ok"
            android:textColor="@color/chat_white" />
    </RelativeLayout>
</RelativeLayout>