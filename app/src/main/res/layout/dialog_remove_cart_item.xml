<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_minus"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_minus" />

        <TextView
            android:id="@+id/tv_item_quantity"
            style="@style/TextView.Black.Medium"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/activity_margin_5"
            android:layout_marginEnd="@dimen/activity_margin_5"
            tools:text="@string/dummy_item" />

        <ImageButton
            android:id="@+id/btn_plus"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_plus" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        style="@style/Button.Black"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_margin_20"
        android:text="@string/remove" />
</LinearLayout>