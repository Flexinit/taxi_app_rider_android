<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shop_rel1">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_margin="20dp"
            android:src="@drawable/mshoe"
            android:id="@+id/image_product"/>

        <TextView
            style="@style/TextView_style_d"
            android:layout_toRightOf="@id/image_product"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:text="Item 1"
            android:textStyle="bold"
            android:id="@+id/tvProduct_name"/>

        <TextView
            style="@style/TextView_style_d"
            android:layout_toRightOf="@id/image_product"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Details"
            android:textSize="15sp"
            android:layout_below="@id/tvProduct_name"
            android:id="@+id/tvDetails"/>

        <TextView
            style="@style/TextView_style_d"
            android:layout_toRightOf="@id/image_product"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="$1.3"
            android:textSize="15sp"
            android:layout_below="@id/tvDetails"
            android:id="@+id/tvPrice"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/shop_now"
            android:textAllCaps="false"
            android:layout_marginStart="5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvDetails"
            android:layout_marginEnd="5dp"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/image_heart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_heart"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"/>


    </RelativeLayout>
</RelativeLayout>