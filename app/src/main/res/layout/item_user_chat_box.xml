<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="@dimen/activity_padding_10">

    <com.bhargavms.dotloader.DotLoader
        android:id="@+id/text_dot_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:color_array="@array/dot_black"
        app:dot_radius="4dp"
        app:number_of_dots="3" />

    <ImageView
        android:id="@+id/iv_attachment_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="gone" />



    <TextView
        android:id="@+id/text_message_body"
        style="@style/TextView.White.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/text_message_time"
        android:background="@drawable/rounded_rectangle_black"
        android:maxWidth="240dp"
        android:padding="8dp"
        tools:text="hello, hello!" />

    <TextView
        android:id="@+id/text_message_time"
        style="@style/TextView.Grey.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="4dp"
        android:textSize="12sp"
        tools:text="2 min ago" />

</RelativeLayout>