<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.BillActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_x_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/toolbar_elevation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:showDividers="beginning|middle|end"
                android:stretchColumns="0.5,2">


                <TableRow
                    android:divider="@drawable/table_divider"
                    android:showDividers="middle">

                    <TextView
                        style="@style/TextView.Black.Small.Bold"
                        android:layout_column="1"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:padding="5dp"
                        android:text="@string/from" />


                    <TextView
                        android:id="@+id/tv_source"
                        style="@style/TextView.Black.Small"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_weight="1"
                        android:padding="5dp"
                        tools:text="@string/name" />


                </TableRow>

                <View
                    android:layout_height="@dimen/separator_min_height"
                    android:background="#FF909090" />

                <TableRow
                    android:divider="@drawable/table_divider"
                    android:showDividers="middle">

                    <TextView
                        style="@style/TextView.Black.Small.Bold"
                        android:layout_column="1"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:padding="5dp"
                        android:text="@string/to" />


                    <TextView
                        android:id="@+id/tv_destination"
                        style="@style/TextView.Black.Small"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_weight="1"
                        android:padding="5dp"
                        tools:text="@string/destination" />


                </TableRow>

                <View
                    android:layout_height="@dimen/separator_min_height"
                    android:background="#FF909090" />

                <TableRow
                    android:divider="@drawable/table_divider"
                    android:showDividers="middle">

                    <TextView
                        style="@style/TextView.Black.Small.Bold"
                        android:layout_column="1"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:padding="5dp"
                        android:text="@string/no_of_seats_" />


                    <TextView
                        android:id="@+id/tv_no_of_seats"
                        style="@style/TextView.Black.Small"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_weight="1"
                        android:padding="5dp"
                        tools:text="@string/name" />


                </TableRow>


                <View
                    android:layout_height="@dimen/separator_min_height"
                    android:background="#FF909090" />

                <TableRow
                    android:divider="@drawable/table_divider"
                    android:showDividers="middle">

                    <TextView
                        style="@style/TextView.Black.Small.Bold"
                        android:layout_column="1"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:padding="5dp"
                        android:text="@string/departure_time_" />


                    <TextView
                        android:id="@+id/tv_departure_time"
                        style="@style/TextView.Black.Small"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_weight="1"
                        android:padding="5dp"
                        tools:text="@string/name" />


                </TableRow>


            </TableLayout>

            <Button
                android:id="@+id/btn_cancel_booking"
                style="@style/Button.Black"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_xx_large"
                android:minWidth="128dp"
                android:minHeight="32dp"
                android:text="@string/cancel_ride" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>

