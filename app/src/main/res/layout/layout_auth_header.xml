<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAppYellow">

    <ImageView
        android:id="@+id/toolbar_verifcation"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:scaleType="centerCrop"
        android:src="@drawable/app_bar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/verification_drawable_circle"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_circle"
        android:backgroundTint="@color/colorAppYellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_verifcation" />

    <View
        android:id="@+id/vector"
        android:layout_width="64dp"
        android:layout_height="91dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_verifcation" />
</androidx.constraintlayout.widget.ConstraintLayout>